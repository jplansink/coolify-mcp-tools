{
  "name": "coolify-mcp-tools",
  "version": "1.1.0",
  "description": "MCP (Model Context Protocol) server for Coolify - manage your Coolify infrastructure through AI assistants",
  "mcpName": "io.github.jplansink/coolify-mcp-tools",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "coolify-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "dev": "tsc --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm run build && npm run lint",
    "start": "node dist/index.js"
  },
  "keywords": [
    "coolify",
    "mcp",
    "model-context-protocol",
    "ai",
    "claude",
    "anthropic",
    "devops",
    "self-hosted",
    "deployment",
    "docker"
  ],
  "author": "jplansink",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jplansink/coolify-mcp-tools.git"
  },
  "bugs": {
    "url": "https://github.com/jplansink/coolify-mcp-tools/issues"
  },
  "homepage": "https://github.com/jplansink/coolify-mcp-tools#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "debug": "^4.3.4",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.23",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "shx": "^0.3.4",
    "ts-jest": "^29.2.6",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18"
  }
}
